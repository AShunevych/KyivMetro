<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/redLine_Fragment_Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/divider3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/GreenRedTransfer"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                app:backgroundTint="@color/RedLineColor"
                app:borderWidth="2.5dp"
                app:elevation="0dp"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                app:layout_constraintEnd_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/GreenBlueTransfer"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                app:backgroundTint="@color/BluelineColor"
                app:borderWidth="2.5dp"
                app:elevation="0dp"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintEnd_toStartOf="@+id/view5"
                app:layout_constraintTop_toTopOf="@+id/view5" />

            <TextView
                android:id="@+id/textView15"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/Syrets"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView16"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/Dorohozhychi"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/Syrets" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/Lukianivska"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/doroh" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:text="@string/VorotaSpaced"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/lukyanivska" />

            <TextView
                android:id="@+id/textView7"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/DruzhbySpaced"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/pecherska" />

            <TextView
                android:id="@+id/textView8"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/Vydubychi"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/druzby" />

            <TextView
                android:id="@+id/textView9"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/Slavutych"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/vydubychi" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:text="@string/Osokorky"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/slavutych" />

            <TextView
                android:id="@+id/textView11"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:text="@string/Pozniaky"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/osokorky" />

            <TextView
                android:id="@+id/textView12"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:text="@string/Kharkivska"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/pozniaky" />

            <TextView
                android:id="@+id/textView13"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/Vyrlytsia"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/kharkiv" />

            <TextView
                android:id="@+id/textView39"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:text="@string/Boryspilska"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/vyrlytsia" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:text="@string/Chervony_Khutir"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/boryspil" />

            <TextView
                android:id="@+id/textView6"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/Pecherska"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/klovska" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/PalatsSportuSpaced"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/vorota" />

            <TextView
                android:id="@+id/textView17"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/LvaShort"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/GreenBlueTransfer"
                app:layout_constraintEnd_toEndOf="@+id/view4" />

            <TextView
                android:id="@+id/textView18"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/Teatralna"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/GreenRedTransfer"
                app:layout_constraintEnd_toEndOf="@+id/view4" />

            <TextView
                android:id="@+id/textView19"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/Klovska"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/palats" />

            <TextView
                android:id="@+id/textView27"
                style="@style/TextAppearance_FragmentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/green_line_name"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@drawable/green_rect"
                app:layout_constraintBottom_toBottomOf="@+id/redhutir"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/Syrets"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view2"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/green_rect"
                app:layout_constraintBottom_toBottomOf="@+id/vorota"
                app:layout_constraintEnd_toStartOf="@+id/vorota"
                app:layout_constraintTop_toTopOf="@+id/vorota" />

            <View
                android:id="@+id/view4"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/green_rect"
                app:layout_constraintBottom_toBottomOf="@+id/palats"
                app:layout_constraintEnd_toStartOf="@+id/vorota"
                app:layout_constraintTop_toTopOf="@+id/palats" />

            <View
                android:id="@+id/view3"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/red_rect"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <View
                android:id="@+id/view5"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@color/BluelineColor"
                app:layout_constraintBottom_toBottomOf="@+id/palats"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/palats" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Syrets"
                style="@style/FloatActionButton_Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/textView27"
                app:layout_constraintStart_toStartOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                app:useCompatPadding="false" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/doroh"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/lukyanivska"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/vorota"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/palats"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/klovska"
                style="@style/FloatActionButton_Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/palats"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/palats"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/pecherska"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/druzby"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/vydubychi"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/slavutych"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/osokorky"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/pozniaky"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/kharkiv"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/vyrlytsia"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/boryspil"
                style="@style/FloatActionButton_Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/vyrlytsia"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/redhutir"
                style="@style/FloatActionButton_Green"
                app:layout_constraintEnd_toEndOf="@+id/Syrets"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Syrets"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/divider3"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/redLine_Fragment_Scroll">

        <fragment
            android:id="@+id/information_frag"
            android:name="ashunevich.kiyvmetroguide.InformationFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/information_layout" />
    </ScrollView>

</RelativeLayout>