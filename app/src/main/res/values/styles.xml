<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="newTextAppearance">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="TextAppearance_Information_HeadLine" parent="newTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="TextAppearance_Information" parent="newTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TextAppearance_TAB" parent="Widget.Design.TabLayout" >
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance_Legend">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="TextAppearance_FragmentText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start|center_horizontal|center_vertical</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Rectangle_long">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Rectangle_short">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="ring_standart">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>


</resources>
